<% if (post.prev || post.next){ %>
<div class="post-nav">
    <span>
        <% if (post.prev){ %>
        <% if (post.prev.title){ %>
        <a href="<%= url_for(post.prev.path) %>" title="<%= post.prev.title %>">上一篇</a>
        <% } else{ %>
        <a href="<%= url_for(post.prev.path) %>">上一篇</a>
        <% } %>
        <% } %>
    </span>
    <span>
        <% if (post.next){ %>
        <% if (post.next.title){ %>
        <a href="<%= url_for(post.next.path) %>" title="<%= post.next.title %>">下一篇</a>
        <% } else{ %>
        <a href="<%= url_for(post.next.path) %>">下一篇</a>
        <% } %>
        <% } %>
    </span>
</div>
<% } %>